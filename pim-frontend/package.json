{
  "name": "pim-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run -c vitest.config.ts",
    "test:ui": "vitest -c vitest.config.ts",
    "test:e2e": "playwright test",
    "i18n:extract": "node scripts/i18n-extract.mjs",
    "i18n:sync": "node scripts/i18n-sync.mjs",
    "prepare": "husky install"
  },
  "vitest": {
    "test": {
      "globals": true,
      "environment": "node",
      "include": [
        "tests/unit/**/*.spec.ts"
      ]
    }
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.55.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-window": "^1.8.10",
    "intl-messageformat": "^10.5.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.5",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "@playwright/test": "^1.47.2",
    "vitest": "^2.0.5",
    "husky": "^9",
    "@babel/parser": "^7.25.0",
    "@babel/traverse": "^7.25.0",
    "fast-glob": "^3.3.2",
    "dotenv": "^16.4.5"
  }
}
